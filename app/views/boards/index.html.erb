<h2>Welcome to RoR Boards!</h2>

<%= link_to "Start A New Board", new_board_path, class: "btn btn-default" %>

<h2>
  <font color="purple">Existing RoR Boards:</font>
</h2>

<table class="table table-hover table-striped table-condensed">
  <thead>
    <tr>
      <th>Topic</th>
      <th>Posts</th>
    </tr>
  </thead>
  <tbody>
    <% @boards.each do |board| %>
      <tr>
        <td><%= link_to board.topic, board_path(board) %></td>
        <%# <td><%= board.topic%></td> %>
        <td><%= board.posts.count %></td>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>
