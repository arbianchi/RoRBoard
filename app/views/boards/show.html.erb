<h3><%= @board.topic%></h3>
<h4>Posts<span class="badge"><%= @board.posts.count %></span></h4>

<%= link_to "Post Here", new_board_post_path(@board), class: "btn btn-default" %>

<h4>Posts</h4>

<table class="table table-hover table-striped table-condensed">
  <thead>
    <tr>
      <th>Post Title</th>
      <th>Author</th>
    </tr>
  </thead>
  <tbody>
    <% @board.posts.each do |post| %>
      <tr>
        <td><%= link_to post.title, board_post_path(@board) %> <span class="badge"><%= post.comments.count %></span></td>
        <td><%= post.user.email %></td>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>
